{
  "name": "@nacelle/react-hooks",
  "version": "2.2.0",
  "description": "Custom convenience hooks for use when building apps with Nacelle",
  "main": "build/index.js",
  "module": "build/index.es.js",
  "files": [
    "build"
  ],
  "scripts": {
    "prepublishOnly": "npm run build",
    "prebuild": "rimraf ./build",
    "build": "rollup -c",
    "test": "jest ./src --watch",
    "test:ci": "jest ./src --runInBand --coverage",
    "lint": "eslint ./src"
  },
  "keywords": [
    "react",
    "nacelle",
    "hooks",
    "nextjs",
    "gatsby",
    "jamstack"
  ],
  "author": "Nacelle Dev Team",
  "license": "ISC",
  "peerDependencies": {
    "react": ">=16.12.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@testing-library/react-hooks": "^3.4.1",
    "@types/jest": "^26.0.9",
    "@types/react": "^16.9.46",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "eslint": "^7.6.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.5",
    "eslint-plugin-react-hooks": "^4.0.8",
    "husky": "^4.2.5",
    "jest": "^26.3.0",
    "jest-watch-typeahead": "^0.6.0",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-test-renderer": "^16.13.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.23.1",
    "rollup-plugin-peer-deps-external": "^2.2.3",
    "rollup-plugin-terser": "^7.0.0",
    "rollup-plugin-typescript2": "^0.27.2",
    "ts-jest": "^26.2.0",
    "typescript": "^3.9.7"
  },
  "lint-staged": {
    "src/**/*.(js|ts)": [
      "prettier --write",
      "npm run lint"
    ],
    "*{json, md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "gitHead": "035c19eae87a2fa022d2649bd6a829bef55709f3",
  "publishConfig": {
    "access": "public"
  }
}
